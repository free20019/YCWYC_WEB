.tw-layout-header {
  height: 100%;
  background-color: #084aa1;
  display: flex;
  .tw-title {
    padding: 0 10px;
    font-size: 25px;
    line-height: 50px;
    color: #ffffff;
    float: left;
    letter-spacing: 0.2em;
  }
  .tw-toolbar {
    display: flex;
    align-items: center;
    height: 100%;
  }
  .tw-toolbar {
    flex: 1;
    justify-content: center;
    padding-right: 10px;
    &-item {
      position: relative;
      display: flex;
      align-items: center;
      height: 50px;
      padding-left: 20px;
      padding-right: 20px;
      cursor: pointer;
      color: #ffffff;
      transition: background-color 0.3s ease-in-out;
      font-size: 16px;

      &::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        z-index: 0;
      }
      &::after {
        width: 0;
        height: 4px;
        background-color: #ffffff;
        transition: width 0.3s ease-in-out;
      }

      &:hover,
      &.active {
        background-color: #7cb0f0;
        &::after {
          width: 100%;
        }
      }

      &.active {
        font-weight: 600;
      }
    }
    &__controller {
      // width: 200px;
      cursor: default;

      &::after {
        display: none;
      }

      &:hover {
        background-color: transparent;
      }

      .tw-button {
        &__icon {
          margin-right: 15px;
          cursor: pointer;

          &:hover {
            text-shadow: 0 0 4px #000000;
          }

          &:last-child {
            margin-right: 0;
          }
        }
      }
    }
  }
}

.tw-menu {
  & > .tw-menu-item {
    height: 50px !important;
    line-height: 50px !important;
    &.active {
      .tw-menu-link {
        color: #02449e;
        background-color: #e5eff9;
      }
    }
    .tw-menu-link {
      color: #ffffff;
      padding-left: 0;
      padding-right: 0;
      user-select: none;
      &:hover {
        color: #02449e;
        background-color: #e5eff9;
      }
    }
    .tw-icon {
      font-size: 18px !important;
      margin-left: 15px !important;
      margin-right: 11px !important;
    }
  }
  & > .tw-menu-group {
    .tw-menu-title {
      padding-left: 0;
      padding-right: 0;
    }
    &:first-child {
      padding-top: 20px;
    }
    & > .tw-menu-title {
      height: 50px;
      line-height: 50px;
      &.active,
      &.open,
      &:hover {
        color: #02449e;
        background-color: #e5eff9;
      }
      .tw-icon {
        font-size: 18px !important;
        margin-left: 15px;
        margin-right: 11px;
      }
    }
  }
}
.tw-menu-panel {
  padding: 10px 0;
  background-color: #203051 !important;
  .tw-menu-group {
    .tw-menu-title {
      &.active,
      &.open,
      &:hover {
        background-color: #e5eff9;
        color: #02449e;
      }
      padding-left: 25px;
      height: 45px !important;
      line-height: 45px !important;
    }
  }
}
.tw-menu {
  height: 100%;
  background-color: #2a3d65;
}
